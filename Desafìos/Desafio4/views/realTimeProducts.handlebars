<h1>LISTA DE PRODUCTOS EN TIEMPO REAL</h1>
<div id="container">
    <div>
        <form id="formulario1" class="form">
            <label for="title">Título:</label>
            <input type="text" id="title" name="title">

            <label for="description">Descripción:</label>
            <input type="text" id="description" name="description">

            <label for="code">Código:</label>
            <input type="text" id="code" name="code">

            <label for="price">Precio:</label>
            <input type="number" id="price" name="price">

            <label for="status">Estado:</label>
            <input type="checkbox" id="status" name="status">

            <label for="stock">Stock:</label>
            <input type="number" id="stock" name="stock">

            <label for="category">Categoría:</label>
            <input type="text" id="category" name="category">

            <input type="submit" value="Agregar" class="btn-product">
        </form>
    
        <form id="formulario2" class="form">
            <label for="removeproduct">Ingrese ID del producto a eliminar</label>
            <input type="text" id="removeproduct" name="removeproduct">
            <input type="submit" value="Eliminar" class="btn-product">
        </form>
    </div>
    <div id="products-container" class="container-products">
    </div>
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/index.js"></script>